

<h1>Jobs</h1>
<table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Status</th>
      <th>Title</th>
      <th>Sumary</th>
      <th>Winning bid</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_id %></td>
        <td><%= job.status %></td>
        <td><%= job.title %></td>
        <td><%= job.sumary %></td>
        <td><%= job.winning_bid_id %></td>
        <td><%= job.data_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


